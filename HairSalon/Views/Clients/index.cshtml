@model List<HairSalon.Models.Client>

@{
    ViewData["Title"] = "Our Clients";
}

<h1>Our Clients</h1>

@if (Model.Count == 0)
{
    <h3>No clients</h3>
}
else
{
    <ol>
        @foreach (var client in Model)
        {
            <li>@client.Name
                <a href="/clients/details/@client.ClientId" class="btn btn-primary">Details</a>
                <a href="/clients/edit/@client.ClientId" class="btn btn-success">Edit</a>
                <a href="#" data-id="@client.ClientId" class="btn btn-danger delete-link">Delete</a>
            </li>
        }
    </ol>
}
