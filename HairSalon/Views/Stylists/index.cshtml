@{
    ViewData["Title"] = "Our Stylists";
}
@using HairSalon.Models;

<h1>Our Stylists</h1>

@if (Model.Count == 0)
{
    <h3>No stylists</h3>
}

<ol>
    @foreach (Stylist stylist in Model)
    {
        <li>
            @stylist.Name
            <a href="/stylists/details/@stylist.StylistId">View Details</a>
            <a href="/stylists/edit/@stylist.StylistId">Edit</a>
            <a href="#" data-id="@stylist.StylistId" class="delete-link">Delete</a>
        </li>
    }
</ol>
